// Prisma Schema for Clock-In/Out System
// This file defines the database structure

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model - Employees in the system
model User {
  uid      String   @id @db.VarChar(255)
  name     String   @db.VarChar(255)
  key      String?  @db.VarChar(255) // NFC card key
  
  // Relations
  auths    Auth[]
  schedule UserSchedule[]

  @@map("user") // Maps to 'user' table in database
}

// UserSchedule model - Employee schedules
model UserSchedule {
  id     Int    @id @default(autoincrement())
  day    String @db.VarChar(50)
  hour   String @db.VarChar(50)
  room   String @db.VarChar(100)
  
  // Relations
  userId String @map("userUid") @db.VarChar(255)
  user   User   @relation(fields: [userId], references: [uid], onDelete: Cascade)

  @@map("user_schedule")
  @@index([userId])
}

// Auth model - Clock in/out records
model Auth {
  id        Int      @id @default(autoincrement()) @map("id_key")
  reader    String   @db.VarChar(50) // 'input' or 'output'
  timestamp Int      // Unix timestamp
  
  // Relations
  userId    String   @map("userUid") @db.VarChar(255)
  user      User     @relation(fields: [userId], references: [uid], onDelete: Cascade)

  @@map("auth_entity")
  @@index([userId])
  @@index([timestamp])
}

